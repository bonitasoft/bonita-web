                            <systemPropertyVariables>
                                <bonita.client.home>${bonita.client.home}</bonita.client.home>
                            </systemPropertyVariables>
                            <includes>
                                <!--the following are failsafe conventions -->
                                <include>**/*IT.java</include>
                                <include>**/*IntegrationTest.java</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Avoid executing the tests twice (they are already launched with failsafe) -->
